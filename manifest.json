{
    "manifest_version": 2,
    "name": "Newlogy",
    "description": "Clean up and enhance Schoology's interface",
    "version": "2.0.3",
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": true
    },
    "content_scripts": [{
        "matches": ["https://*.schoology.com/*", "https://schoology.com/*"],
        "js": ["clean.js"],
        "css": ["css/clean.css", "css/floating_header.css"]
    }, {
        "matches": ["https://fccps.schoology.com/user/3503469*"],
        "js": ["dev.js"],
        "css": ["css/dev.css"]
    }],
    "background": {
        "scripts": ["background.js"]
    },
    "icons": {
        "32": "icons/32.png",
        "64": "icons/64.png",
        "128": "icons/128.png",
        "256": "icons/256.png"
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "web_accessible_resources": ["options/options.html"]
}
